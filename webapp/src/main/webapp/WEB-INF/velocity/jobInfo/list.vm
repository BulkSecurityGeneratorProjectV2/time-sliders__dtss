<div class="page-header">
    <h1>
        <small>任务信息</small>
    </h1>
</div>

<div class="page-content">
    <div class="row-fluid">
        <form class="form-horizontal" id="searchForm" method="post" action="$ac.contextPath/job/list"
              style="margin-bottom: 16px;margin-top: 8px;">
            <input type="hidden" id="pageNo" name="pageNo" value="$!{query.pageNo}"/>
            <input type="hidden" id="pageSize" name="pageSize" value="$!{query.pageSize}"/>
            <input type="hidden" id="pageCount" name="pageCount" value="$!{query.pageCount}"/>
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>
                    <td style="text-align:right">所属APP</td>
                    <td>
                        <input id="app" type="text" placeholder="所属APP" name="app" value="$!{ao.app}">
                    </td>
                    <td style="text-align:right">JobBeanName:</td>
                    <td>
                        <input id="jobBeanName" type="text" placeholder="Bean名称,类名,首字母小写" name="jobBeanName"
                               value="$!{ao.jobBeanName}">
                    </td>
                    <td style="text-align:right">任务名称</td>
                    <td>
                        <input id="name" type="text" placeholder="JOB名称" name="name" value="$!{ao.name}">
                    </td>
                </tr>
                <tr>
                    <td style="text-align:right">触发模式</td>
                    <td>
                        <select name="triggerMode" id="triggerMode">
                            <option value="">默认(全部)</option>
                            <option #if($!{ao.triggerMode}==1) selected #end value=1>自动触发</option>
                            <option #if($!{ao.triggerMode}==2) selected #end value=2>被动执行</option>
                        </select>
                    </td>
                    <td style="text-align:right">任务类型</td>
                    <td>
                        <select name="type" id="type">
                            <option value="">默认(全部)</option>
                            <option #if($!{ao.type}==1) selected #end value=1>分布式任务</option>
                            <option #if($!{ao.type}==7) selected #end value=7>绝对单点任务</option>
                            <option #if($!{ao.type}==8) selected #end value=8>单点优先任务</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="6" align="center">
                        <button type="submit" class="btn btn-xs btn-success" style="width: 150px;height: 30px" onclick="query(1)">查询</button>
                    </td>
                </tr>
            </table>
        </form>

        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
            <tr style="text-align:center">
                <th style="text-align:center">
                    任务名称
                </th>
                <th style="text-align:center">
                    所属应用
                </th>
                <th style="text-align:center">
                    类型
                </th>
                <th style="text-align:center">
                    触发模式
                </th>
                <th style="text-align:center">
                    Cron
                </th>
                <th style="text-align:center">
                    JobBeanName
                </th>
                <th style="text-align:center">
                    是否激活
                </th>
                <th style="width:55px;text-align:center">
                    详情
                </th>
                <th style="width:55px;text-align:center">
                    编辑
                </th>
                <th style="width:55px;text-align:center">
                    删除
                </th>
            </tr>
            </thead>
            #foreach($e in $data )
                <tr>
                    <td style="text-align:center">
                        $!e.name
                    </td>
                    <td style="text-align:center">
                        $!e.app
                    </td>
                    <td style="text-align:center">
                        $!e.type
                    </td>
                    <td style="text-align:center">
                        $!e.triggerMode
                    </td>
                    <td style="text-align:center">
                        $!e.corn
                    </td>
                    <td style="text-align:center">
                        $!e.jobBeanName
                    </td>
                    <td style="text-align:center">
                        $!e.activity
                    </td>
                    <td style="text-align:center">
                        <a href="$ac.contextPath/job/view?id=${e.id}">
                            <button id="viewBtn" type="button" class="btn btn-xs btn-success">
                                查看
                            </button>
                        </a>
                    </td>
                    <td>
                        <a href="$ac.contextPath/job/toedit?id=${e.id}">
                            <button type="button" class="btn btn-xs btn-warning">
                                编辑
                            </button>
                        </a>
                    </td>
                    <td>
                        <button type="button" class="btn btn-xs btn-danger" value="$e.id"
                                onclick="confirmDelete('$e.id','确定要删除任务 $!{e.name} 吗?')">
                            删除
                        </button>
                    </td>
                </tr>
            #end
        </table>
    </div>
    #parse("/commons/pageline.vm")
</div>

#parse("/commons/confirm.vm")
#parse("/commons/page.vm")

<script type="text/javascript">
    $(document).ready(function () {
        $("#jobSpan").click();
        $("#jobView").addClass("active");
    });

    function confirmDelete(id, msg) {
        showConfirm("删除任务信息", msg, "取消", "确认", deleteJobInfo, id);
    }

    function deleteJobInfo(id) {
        jQuery.getJSON("$ac.contextPath/job/delete?id=" + id, function (json) {
            if (json.status == 0) {
                $("#searchForm").submit();
            } else {
                showError(json.errorMsg);
            }
        });
    }

</script>

